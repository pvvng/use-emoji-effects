{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowImportingTsExtensions": false,

    // 타입 선언만 생성
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./dist",

    // 기타 출력 옵션
    "removeComments": true,
    "sourceMap": false,

    // React
    "jsx": "react-jsx",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "types": ["react", "react-dom"],

    // 경로 관련
    "rootDir": "src",
    "outDir": "./dist",

    // 캐시 정보
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.package.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "node_modules", "src/stories"]
}